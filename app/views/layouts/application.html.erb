<!DOCTYPE html>
<html>
  <head>
    <title>HotelHero</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1865247e87.js"></script>
  </head>

  <body class="<%= "#{controller_name} #{action_name}" if Rails.env.development? %>">
    <%= render 'shared/navbar' %>
    <%= render 'shared/notices' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
